source :rubygems

gem 'sinatra'
gem 'builder'

# ActiveRecord with UTF-8 MySQL driver
gem 'sam-mysql-ruby'
gem 'activerecord', '~> 3.0', :require => 'active_record'
gem 'activeresource', '~> 3.0', :require => 'active_resource'
gem 'activemerchant'

# Testing
group :test do
  gem 'activesupport', '~> 3.0', :require => 'active_support'
  gem 'rspec'
  gem 'shoulda'
  gem 'factory_girl'
  gem 'rack-test', :require => "rack/test"
end

