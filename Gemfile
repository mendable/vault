source :rubygems

gem 'sinatra'
gem 'builder'

# ActiveRecord with UTF-8 MySQL driver
gem 'sam-mysql-ruby'
gem 'activerecord', :require => 'active_record'
gem 'activeresource', :require => 'active_resource'

# Testing
group :test do
  gem 'activesupport', :require => 'active_support'
  gem 'rspec'
  gem 'shoulda'
  gem 'rack-test', :require => "rack/test"
end

